[alias]
	st = status -s
	stat = status -s
	graph = log --graph --all --pretty=format':%C(yellow)%h%Cred%d%Creset %s %Cgreen %an, %ar%Creset'
	search = "!f() { git log -p -G\"$1\" --diff-filter=M ; }; f"
	undo-commit = reset --soft HEAD^
	wdiff = diff --color-words
	wshow = show --color-words
	master-to-new-branch = "!master-to-new-branch"
[color]
	ui = true
[color "diff"]
	meta = yellow
[core]
	excludesfile = ~/.gitignore
	pager = less -i
[merge]
	tool = vimdiff
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[push]
	default = upstream
