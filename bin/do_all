#!/usr/bin/env bash

if [ "$1" == "-q" ]; then
	shift
	QUIET=true
fi

# make a progress marker
# http://tldp.org/HOWTO/Bash-Prompt-HOWTO/x361.html
if [ "$QUIET" == true ]; then
	for DIR in *; do
		if [ -d "$DIR" ]; then
			echo -n " "
		fi
	done
	echo -en "|\033[1D"
	for DIR in *; do
		if [ -d "$DIR" ]; then
			echo -en "\033[1D"
		fi
	done
fi

BASEDIR=`pwd`
for DIR in *; do
	if [ -d "$DIR" ]; then
		cd "$DIR"
		if [ "$QUIET" == true ]; then
			echo -n .
			ERROUT=$("$@" 2>&1 >/dev/null)
			RESULT=$?
			if [ $RESULT -gt 0 ]; then
				echo
				echo $DIR exited $RESULT:
				echo $ERROUT
				echo
			fi
		else
			echo
			echo === $DIR ===
			"$@"
		fi
	fi
	cd "$BASEDIR"
done

